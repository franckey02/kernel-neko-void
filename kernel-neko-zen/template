pkgname=kernel-neko-zen
version=6.18.12
revision=1
short_desc="Custom Zen kernel lqx1-neko precompiled for Void Linux"
maintainer="JavierC"
license="GPL-2.0-only"
homepage="https://github.com/franckey02/kernel-neko-void"
distfiles="https://github.com/franckey02/kernel-neko-void/releases/download/6.18-lxq1/zen-kernel-void-${version}-lqx1-neko.tar.gz"
checksum="2264ae86edd992b91dbe222581a455d921a0f2643c55646f4798f548ad084174"
create_wrksrc=yes

do_install() {
    vmkdir boot
    vmkdir usr/lib/modules

    cp -a boot/* ${DESTDIR}/boot/
    cp -a lib/modules/* ${DESTDIR}/usr/lib/modules/
}