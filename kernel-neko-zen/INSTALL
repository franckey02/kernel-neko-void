# Archivo INSTALL para kernel-neko-zen
case "$ACTION" in
post)
	# Registrar los módulos del kernel
	depmod 6.18.12-lqx1-neko

	# Generar initramfs con dracut
	dracut --force /boot/initramfs-6.18.12-lqx1-neko.img 6.18.12-lqx1-neko

	# Actualizar la configuración de GRUB (si se usa)
	if command -v grub-mkconfig >/dev/null 2>&1; then
		grub-mkconfig -o /boot/grub/grub.cfg
	fi
	;;
esac