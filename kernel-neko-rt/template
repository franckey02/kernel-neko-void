pkgname=kernel-neko-rt
version=6.18.0
revision=1
short_desc="Custom RT kernel rt-rt3-neko+ precompiled for Void Linux"
maintainer="JavierC"
license="GPL-2.0-only"
homepage="https://github.com/franckey02/kernel-neko-void"
distfiles="https://github.com/franckey02/kernel-neko-void/releases/download/6.18-rt/neko-kernel-void-6.18.0-rt-rt3-neko+.tar.gz"
checksum="1f7ae08037f4b14d10d0e9c69b8a03f93392710ea3cf50aa01ca9f2eda9d9bc5"
create_wrksrc=yes
triggers="kernel-hooks"
kernel_hooks_version="6.18.0-rt-rt3-neko+"
do_install() {
    vmkdir boot
    vmkdir usr/lib/modules

    cp -a boot/* ${DESTDIR}/boot/
    cp -a lib/modules/* ${DESTDIR}/usr/lib/modules/
}